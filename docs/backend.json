{
  "entities": {
    "Quiz": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Quiz",
      "type": "object",
      "description": "Represents a quiz with questions.",
      "properties": {
        "title": {
          "type": "string",
          "description": "Title of the quiz."
        },
        "questions": {
          "type": "array",
          "description": "A list of questions in the quiz.",
          "items": {
            "$ref": "#/entities/Question"
          }
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp indicating when the quiz was created.",
          "format": "date-time"
        }
      },
      "required": ["title", "questions", "createdAt"]
    },
    "Question": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Question",
      "type": "object",
      "description": "Represents a question within a quiz.",
      "properties": {
        "question": {
          "type": "string",
          "description": "The text of the question."
        },
        "answer": {
          "type": "string",
          "description": "The correct answer for the question."
        },
        "options": {
          "type": "array",
          "description": "A list of possible options for multiple choice questions.",
          "items": {
            "type": "string"
          }
        },
        "type": {
          "type": "string",
          "enum": ["multiple_choice", "true_false", "short_answer"],
          "description": "The type of the question."
        }
      },
      "required": ["question", "answer", "type"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
     "structure": [
      {
        "path": "/quizzes/{quizId}",
        "definition": {
          "entityName": "Quiz",
          "schema": {
            "$ref": "#/backend/entities/Quiz"
          },
          "description": "Collection to store all quizzes created by users.",
          "params": [
            {
              "name": "quizId",
              "description": "The unique identifier for the quiz."
            }
          ]
        }
      }
    ]
  }
}
