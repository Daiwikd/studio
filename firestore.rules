rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to quizzes, but restrict writes.
    // In a real app, you would lock this down further.
    match /quizzes/{quizId} {
      // Allow reading a single quiz and listing all quizzes
      allow get, list: if true;
      allow write: if true; // WARNING: Insecure, for prototyping only.
    }
  }
}
